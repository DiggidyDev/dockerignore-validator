{
    "extends": ["@istanbuljs/nyc-config-typescript", "babel-plugin-istanbul"],

    "extension": [".ts"],
    "include": ["src/**/*.ts"],
    "exclude": ["**/*.{d,spec}.ts"],

    "report-dir": "coverage",
    "reporter": ["html", "text", "text-summary"],

    "all": true,
    "check-coverage": true,
    "branches": 80,
    "lines": 80,
    "functions": 80,
    "statements": 80
}
